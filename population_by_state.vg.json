{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "mapYear",
      "value": 2022,
      "bind": { "input": "range", "name": "Map year: ", "min": 1970, "max": 2022, "step": 1 }
    }
  ],

  "background": "#ffffff",
  "config": {
    "view": { "stroke": null },            
    "axis": {
      "gridColor": "#e5e7eb",
      "domainColor": "#9ca3af",
      "labelColor": "#374151",
      "titleColor": "#111827"
    },
    "legend": { "labelColor": "#374151", "titleColor": "#111827" },
    "title":  { "color": "#111827" }
  },

  "title": {
    "text": "Malaysia States Population Distribution (1970–2022)",
    "subtitle": "Coloured by share of Malaysia’s total population (%)",
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 14,
    "offset": 15
  },

  "width": 800,
  "height": 400,
  "projection": { "type": "mercator", "center": [110, 4], "scale": 2100 },

  "layer": [
    { "data": { "sphere": true }, "mark": { "type": "geoshape", "fill": "#b1ccdf", "stroke": null } },
    { "data": { "graticule": { "step": [4, 4] } }, "mark": { "type": "geoshape", "stroke": "#9b9d9c", "strokeWidth": 0.5 } },
    {
      "data": {
        "url": "https://gist.githubusercontent.com/deenaixr/f61223dd0f316baff985361081587410/raw/ac6399fc99052a7ced473c93d7209483088416e2/malaysia_neighbours.json",
        "format": { "type": "topojson", "feature": "malaysia_neighbours" }
      },
      "transform": [{ "filter": "datum.properties.admin != 'Malaysia'" }],
      "mark": { "type": "geoshape", "fill": "#e0e0e0", "stroke": "#aaa", "strokeWidth": 0.5 }
    },

    {
      "data": {
        "url": "https://gist.githubusercontent.com/deenaixr/4551e0cdb3bc8273253c82af8d0cb61d/raw/d0fbd60e38aee61daaf5b7a709d945276d35a187/state_population_by_year.csv",
        "format": { "type": "csv" }
      },

      "transform": [
        { "filter": "datum.year == mapYear" },

        { "calculate": "datum.state", "as": "state_raw" },

        {
          "lookup": "state_raw",
          "from": {
            "data": {
              "values": [
                { "csv": "Johor", "std": "Johor", "topo": "Johor" },
                { "csv": "Kedah", "std": "Kedah", "topo": "Kedah" },
                { "csv": "Kelantan", "std": "Kelantan", "topo": "Kelantan" },
                { "csv": "Melaka", "std": "Melaka", "topo": "Malacca" },
                { "csv": "Negeri Sembilan", "std": "Negeri Sembilan", "topo": "Negeri Sembilan" },
                { "csv": "Pahang", "std": "Pahang", "topo": "Pahang" },
                { "csv": "Perak", "std": "Perak", "topo": "Perak" },
                { "csv": "Perlis", "std": "Perlis", "topo": "Perlis" },
                { "csv": "Pulau Pinang", "std": "Pulau Pinang", "topo": "Pulau Pinang" },
                { "csv": "Sabah", "std": "Sabah", "topo": "Sabah" },
                { "csv": "Sarawak", "std": "Sarawak", "topo": "Sarawak" },
                { "csv": "Selangor", "std": "Selangor", "topo": "Selangor" },
                { "csv": "Terengganu", "std": "Terengganu", "topo": "Terengganu" },
                { "csv": "W.P. Kuala Lumpur", "std": "Kuala Lumpur", "topo": "Kuala Lumpur" },
                { "csv": "W.P. Labuan", "std": "Labuan", "topo": "Labuan" },
                { "csv": "W.P. Putrajaya", "std": "Putrajaya", "topo": "Putrajaya" }
              ]
            },
            "key": "csv",
            "fields": ["std", "topo"]
          }
        },

        { "calculate": "isValid(datum.std) ? datum.std : datum.state_raw", "as": "state_std" },
        { "calculate": "isValid(datum.topo) ? datum.topo : datum.state_raw", "as": "state_key_for_topo" },

        {
          "lookup": "state_key_for_topo",
          "from": {
            "data": {
              "url": "https://gist.githubusercontent.com/deenaixr/c5743939746bf07dccbe6d9f29240ce4/raw/396e4ae43f53e8c6e7610786aecbea1e269650ab/malaysia.topojson",
              "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
            },
            "key": "properties.name",
            "fields": ["geometry"]
          }
        },

        { "joinaggregate": [{ "op": "sum", "field": "population", "as": "total_pop" }] },
        { "calculate": "datum.population / datum.total_pop * 100", "as": "share_pct" }
      ],

      "mark": { "type": "geoshape", "stroke": "#333", "strokeWidth": 0.8 },

      "encoding": {
        "shape": { "field": "geometry", "type": "geojson" },

        "color": {
          "field": "share_pct",
          "type": "quantitative",
          "title": "Share of Malaysia (%)",
          "format": ".1f",
          "scale": { "domain": [0, 20], "nice": false, "scheme": "greenblue" },
          "legend": {
            "orient": "right",
            "direction": "vertical",
            "gradientLength": 300,
            "gradientThickness": 12,
            "values": [0, 5, 10, 15, 20]
          }
        },

        "tooltip": [
          { "field": "state_std", "title": "State" },
          { "field": "population", "title": "Population ('000)", "format": ",.0f" },
          { "field": "share_pct", "title": "Share (%)", "format": ".2f" },
          { "field": "year", "title": "Year" }
        ]
      }
    }
  ],

  "config": { "view": { "stroke": null } }
}
